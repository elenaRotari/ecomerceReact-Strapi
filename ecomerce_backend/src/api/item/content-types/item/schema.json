{
  "kind": "collectionType",
  "collectionName": "items",
  "info": {
    "singularName": "item",
    "pluralName": "items",
    "displayName": "Item"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "title": {
      "type": "string",
      "required": true
    },
    "isNew": {
      "type": "boolean",
      "default": false,
      "required": true
    },
    "price": {
      "type": "decimal",
      "required": true
    },
    "oldPrice": {
      "type": "decimal",
      "required": true
    },
    "img": {
      "allowedTypes": [
        "images"
      ],
      "type": "media",
      "multiple": true,
      "required": true
    }
  }
}
